<!--Add this for the model to load properties of the RandomMovieViewModel Class-->
@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Code block -->
@{ 
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<!-- If the list of customers is higher than 5 then the var className will change to popular -->
<h2 class="@className">@Model.Movie.Name</h2>

<!-- Only if the movie hasnt been rented -->
@if(Model.Customers.Count == 0)
{
    <p>No has rented this movie.</p>
}

<!-- List of customer who have rented the movie -->
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>